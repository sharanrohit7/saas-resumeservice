{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": ["src/**/*.ts", "index.ts", "app.ts", "interfaces"],
  "exclude": ["node_modules"]
}